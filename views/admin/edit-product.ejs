<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form 
            class="product-form" 
            action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    value="<% if (editing) { %><%= product.title %><% } %>" type="text" name="title" id="title">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input value="<% if (editing) { %><%= product.imageUrl %><% } %>" type="text" id="imageUrl" name="imageUrl">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input value="<% if (editing) { %><%= product.price %><% } %>" type="number" name="price" id="price" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId" >
            <% } %>
            <button class="btn" type="submit">
                <% if (editing) { %>
                    Save Changes
                <% } else { %>
                    Add Product
                <% } %>
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>